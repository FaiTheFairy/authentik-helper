services:
  authentik-helper:
    image: ghcr.io/faithefairy/authentik-helper:latest
    env_file: ./.env
    ports:
      - "8000:8000"
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://127.0.0.1:8000/healthz"]
      interval: 30s
      timeout: 5s
      retries: 5
